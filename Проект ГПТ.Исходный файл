.header { display:flex; justify-content:space-between; padding:15px; background:#b10000; color:white; }
.logo span { font-weight:bold; }
.grid { display:grid; grid-template-columns:repeat(auto-fit,minmax(300px,1fr)); gap:20px; padding:20px; }
.card { background:white; text-decoration:none; color:black; border-radius:8px; overflow:hidden; box-shadow:0 2px 6px rgba(0,0,0,.2); }
.card img { width:100%; height:200px; object-fit:cover; }
.card h3 { margin:10px; }
.card p { margin:10px; color:#555; }

const search = document.getElementById('search');
search.addEventListener('input', () => {
  document.querySelectorAll('.card').forEach(card => {
    card.style.display = card.innerText.toLowerCase().includes(search.value.toLowerCase()) ? 'block' : 'none';
  });
});
